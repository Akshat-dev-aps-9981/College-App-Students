<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5mdp"
    app:cardElevation="@dimen/_5mdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="@dimen/text_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/br_icon"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginEnd="@dimen/text_margin"
                android:src="@drawable/computer_science" />

            <TextView
                android:id="@+id/br_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_margin="@dimen/_3mdp"
                android:layout_marginStart="@dimen/text_margin"
                android:fontFamily="@string/bold"
                android:text="Branches"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/br_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_6mdp"
            android:fontFamily="@string/regular"
            android:text="Computer Science is teached by us. I don't know for others."
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>